{
  "name": "translation-ai-cli",
  "description": "A command-line tool for translating text using LLMs.",
  "version": "0.0.0",
  "author": "IBM Skills Network",
  "bin": {
    "translation-ai-cli": "./bin/run.js"
  },
  "bugs": "https://github.com/ibm-skills-network/translation-ai-cli/issues",
  "dependencies": {
    "@ibm-cloud/watsonx-ai": "^1.7.0",
    "@langchain/community": "^1.0.0",
    "@langchain/core": "^1.0.2",
    "@langchain/openai": "^1.0.0",
    "@langchain/textsplitters": "^1.0.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@jest/globals": "^30.2.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^18",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "jest": "^30.2.0",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/ibm-skills-network/translation-ai-cli",
  "keywords": [
    "oclif"
  ],
  "license": "Apache 2.0",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "translation-ai-cli",
    "dirname": "translation-ai-cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topics": {
      "profiles": {
        "description": "Manage LLM provider profiles"
      },
      "translate": {
        "description": "Translate content between languages"
      }
    }
  },
  "repository": "ibm-skills-network/translation-ai-cli",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@10.22.0"
}